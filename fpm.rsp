@build-gfortran-debug
option build --compiler gfortran --flag "-DDEBUG -fPIC -O0 -g -fbounds-check -fbacktrace -Wall -fmax-errors=1 -Wimplicit-interface -Wno-integer-division -fbounds-check"

@install-gfortran-debug
option install --compiler gfortran --flag "-DDEBUG -fPIC -O0 -g -fbounds-check -fbacktrace -Wall -fmax-errors=1 -Wimplicit-interface -Wno-integer-division -fbounds-check"

@test-gfortran-debug
option test --compiler gfortran --flag "-DDEBUG -fPIC -O0 -g -fbounds-check -fbacktrace -Wall -fmax-errors=1 -Wimplicit-interface -Wno-integer-division -fbounds-check"

@build-gfortran-run
option build --compiler gfortran --flag "-fPIC -O3 -march=native -fmax-errors=1 -ffixed-line-length-none -fno-range-check"

@install-gfortran-run
option install --compiler gfortran --flag "-fPIC -O3 -march=native -fmax-errors=1 -ffixed-line-length-none -fno-range-check"

@test-gfortran-run
option test --compiler gfortran --flag "-fPIC -O3 -march=native -fmax-errors=1 -ffixed-line-length-none -fno-range-check"


